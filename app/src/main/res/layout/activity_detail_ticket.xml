<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="28dp"
    android:paddingVertical="28dp"
    tools:context=".ui.DetailTicketActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@id/tvHead"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHead" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail tiket"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardDetailTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvHead">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/second"
            android:paddingHorizontal="28dp"
            android:paddingVertical="18dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumberTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="120dp"
                android:gravity="left"
                android:text="#00"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStatusTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@id/tvTicketCategory"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvNumberTicket" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTicketCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Platinum"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tvNumberTicket" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:text="full name"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvTicketCategory" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Nomor registrasi anggota"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCampus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="KD dipa"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvNra" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="08000"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvCampus" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="maul@nfakjf.com"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvPhone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="jalan gankefjae zdkfnks zdfkjb bjk bkj kubku"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvEmail" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTshirt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="left"
                android:text="Baju hitam"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvAddress" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTshirtType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Lengan pendek"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvTshirt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTshirtSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Size XL"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvTshirtType" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_content_copy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvTicketLink" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTicketLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="left"
                android:text="https://shfukes.fnksr"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/imgCopy"
                app:layout_constraintTop_toBottomOf="@id/tvTshirtSize" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/forth"
        android:text="Chat wa"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDetailTicket" />

</androidx.constraintlayout.widget.ConstraintLayout>